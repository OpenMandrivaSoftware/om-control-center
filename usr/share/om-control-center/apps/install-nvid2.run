#!/bin/bash
	enable-repo non-free
konsole -e sh -c "echo 'Checking for, and removing any previous Nvidia driver. Enter y or Y to confirm removal, if previous driver is found.'; sleep 3; pkexec dnf remove nvidia nvidia-legacy nvidia-dkms-kmod nvidia-legacy-dkms-kmod  && pkexec dnf install nvidia-legacy; echo 'Press enter to close konsole'; read"
